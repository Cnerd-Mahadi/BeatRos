{
	"extends": "@beatros/typescript-config/base.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"exclude": ["node_modules"],
	"include": ["src"]
}
